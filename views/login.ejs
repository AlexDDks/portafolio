    <section class="sectionForm">
        <article class="formLeft">
            <form action="/users/login" method="POST" class="formLogin">

                <h2>Bienvenido</h2>

                <div class="user">
                    <input class="barra" type="text" name="nombreDeUsurio" placeholder="Usuario">
                </div>

                <div class="password">
                    <input class="barra" type="password" name="contrasena" placeholder="Contraseña">
                </div>

                <div class="links">
                    <a class="reestablecerContrasena" href="/reestabletucontrasena">¿Olvidaste tu contraseña?</a>
                    <a class="signup" href="/signup">Regístrate</a>
                </div>

                <div class="divBoton">
                    <button class="boton" type="submit"><a class="textBoton" href="/">Ingresar</a></button>
                </div>

            </form>

        </article>

        <article class="formRight">
            <div class="nextForm">
                <img class="imgForm" src="/img/programmer.png" alt="">
            </div>
        </article>
    </section>

</body>

